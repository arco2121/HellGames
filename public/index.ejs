<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hell Games</title>
    <link rel="stylesheet" href="./style/index.css">
</head>
<body>
    <div class="cap">
        <div class="cap_logo">
            <img src="./img/logo.png" alt="Hell Games Logo" height="65" class="logo">
        </div>
        <div class="cap_login">
            <img src="./img/login.png" alt="login" height="50" alt="Login" class="login">
        </div>
    </div>
    <div class="cont">
        <div class="top">
            <h2>Suggested Game</h2>
            <div class="gamecon">
                <div class="half">
                    <img src="./img/<%= game.id %>.png" alt="Game" class="gameimg">
                </div>
                <div class="half">
                    <h3><%= game.name %></h3>
                    <p><%= game.mini_description %></p>
                </div>
            </div>
        </div>
        <div class="bottom">
            <h2>Top Games</h2>
            <% games.forEach(function(game) { %>
                <div class="gamemincon">
                    <img src="./img/<%= game.id %>.png" alt="Game" class="gameimg">
                    <h3><%= game.name %></h3>
                    <h3><%= game.rating %></h3>
                </div>
            <% }) %>
    </div>
    <script src="./js/index.js"></script>
</body>
</html>